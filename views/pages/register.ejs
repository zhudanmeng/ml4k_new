<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('../partials/head'); %>
    </head>

    <body>
        <section class="bg-white min-h-screen">
            <%- include('../partials/nav'); %>

            <div
                class="w-full max-w-md mx-auto mt-7 md:mt-32 overflow-hidden bg-white rounded-lg shadow-md"
            >
                <div class="px-6 py-4">
                    <h2
                        class="text-3xl font-bold text-center text-gray-700 my-5"
                    >
                        Create a New Account
                    </h2>

                    <form method="POST" action="/auth/register">
                        <div class="w-full mt-4">
                            <input
                                class="block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-md focus:border-blue-500 focus:outline-none focus:ring"
                                type="text"
                                placeholder="Username"
                                name="username"
                            />
                        </div>

                        <div class="w-full mt-4">
                            <input
                                class="block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-md focus:border-blue-500 focus:outline-none focus:ring"
                                type="password"
                                placeholder="Password"
                                name="password"
                            />
                        </div>

                        <div class="w-full mt-4">
                            <input
                                list="schools"
                                class="block w-full px-4 py-2 mt-2 text-gray-700 placeholder-gray-500 bg-white border rounded-md focus:border-blue-500 focus:outline-none focus:ring"
                                type="text"
                                placeholder="School Name"
                                name="school"
                            />
                            <datalist id="schools">
                                <% schools.forEach((school)=> { %>
                                <option
                                    value="<%= school.schoolName %>"
                                ></option>
                                <% }); %>
                            </datalist>
                        </div>

                        <div class="flex items-center justify-between mt-4">
                            <button
                                class="w-full px-4 py-2 leading-5 text-white transition-colors duration-200 transform bg-gray-700 rounded hover:bg-gray-600 focus:outline-none"
                                type="submit"
                            >
                                Register
                            </button>
                        </div>
                    </form>
                </div>

                <div
                    class="flex items-center justify-center py-4 text-center bg-gray-50"
                >
                    <span class="text-sm text-gray-600"
                        >Already have an account?</span
                    >

                    <a
                        href="/auth/login"
                        class="mx-2 text-sm font-bold text-purple-800 hover:underline"
                        >Login</a
                    >
                </div>
            </div>
        </section>
    </body>
</html>
